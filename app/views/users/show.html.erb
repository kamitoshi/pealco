<div class="container">
  <div class="row">
    <div class="col-lg-4 ma-t-50">
      <%= render "users/user_info", user: current_user %>
    </div>
    <div class="col-lg-8 ma-t-30">
      <div class="title pa-20 center">
        <h１ class="font-30"><%= @user.name %>さんの詳細</h１>
      </div>

      <div class="profile-image-box pa-20 center">
        <%= user_info_image(@user) %>
      </div>
      <div class="message-link right">
        <%= link_to "メッセージを送る", user_rooms_path(@user),method: :post, class: "btn btn-success" %>
      </div>
      <div id="follow_info">
        <%= render "follows/follow_info", user: @user %>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td width="15%"></td>
            <th scope="row" width="35%">ニックネーム</th>
            <td width="50%"><%= @user.name %></td>
          </tr>
          <tr>
            <td></td>
            <th scope="row">好きなジャンル</th>
            <td><%= favorite_alc_name(@user) %></td>
          </tr>
          <tr>
            <td></td>
            <th scope="row">自己紹介文</th>
            <td></td>
          </tr>
          <tr>
            <td style="border-top: 0;"></td>
            <td style="border-top: 0;" colspan="2"><div class="ma-r-30"><%= simple_format(@user.introduction) %></div></td>
          </tr>
        </tbody>
      </table>
      <% unless @user == current_user %>
        <div id="follow_toggle" class="right">
          <%= render "follows/follow_btn", user: @user %>
        </div>
      <% end %>
      <div class="title pa-20 center">
        <h１ class="font-30">投稿一覧</h１>
      </div>
      <% if @user.posts.any? %>
        <% @user.posts.each do |post| %>     
          <div class="post-box border pa-20 ma-y-20">
            <div class="post-box-title">
              <h4 class="center"><%= link_to post.title, post_path(post) %></h4>
            </div>
            <hr>
            <div class="post-box-image center">
              <%= image_tag post.alc_category.image.thumb300.to_s %>  x  <%= image_tag post.image.thumb300.to_s %>
            </div>
            <div class="post-box-category">
              <p>ジャンル：<%= post.menu_category.name %></p>
            </div>
            <div class="post-box-content">
              <%= post.content %>
            </div>
            <div class="post-box-info ma-t-10 dis-ib">
              <span>投稿者：<%= post.user.name %></span><br>
              <span>投稿日時：<%= post.created_at.strftime("%Y/%m/%d %H:%M") %></span>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="ma-t-30 center">まだ投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>