<div class="container">
  <div class="row">
    <div class="col-4 ma-t-50">
      <%= render "users/user_info", user: @user %>
    </div>
    <div class="col-8 ma-t-30">
      <div class="title pa-20 center">
        <h１ class="font-30">フォロー一覧</h１>
      </div>
      <table class="table">
        <% if @user.follow_users.any? %>
          <thead>
            <tr class="active">
              <th width="10%"></th>
              <th width="20%">ニックネーム</th>
              <th width="20%">好きなジャンル</th>
              <th width="50%">投稿数</th>
            </tr>
          </thead>
          <% @user.follow_users.each do |user| %>
            <tbody>
              <tr>
                <td>
                  <%= user_sumnail_image(user) %>
                </td>
                <td><%= link_to user.name, user_path(user) %></td>
                <td><%= favorite_alc_name(user) %></td>
                <td><%= link_to user.posts.count, posts_path %></td>
              </tr>
            </tbody>
          <% end %>
        <% else %>
          <p class="ma-t-30 center">フォローしていません</p>
        <% end %>
      </table>	
    </div>
  </div>
</div>