<%= form_for @user do |f| %>

  <%= render "shared/form_error_message", resource: @user %>

  <div class="form-group right ma-t-20">
    <%= link_to "パスワード変更", edit_user_registration_path, class:"btn btn-outline-primary" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "ニックネーム" %>
    <%= f.text_field :name, class: "form-control"%>
    <div class="invalid-feedback">
      ニックネームを確認してください
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
    <div class="invalid-feedback">
      ニックネームを確認してください
    </div>
  </div>

  <div class="form-group">
    <%= f.label :alc_category, "好きなジャンル" %><br>
    <%= f.collection_select :alc_category_id, AlcCategory.all, :id, :name, {prompt: ""}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "自己紹介文" %>
    <%= f.text_area :introduction, class: "form-control" %>
    <div class="invalid-feedback">
      自己紹介文は400文字以内で入力してください
    </div>
  </div>

  <div class="form-group">
    <div class="profile_image_box pa-20">
      <% if @user.image.blank? %>
        <%= image_tag "no_image.png", :size => "200x200", id: "img_prev" %>
      <% else %>
        <%= image_tag @user.image.thumb300.to_s, size: "300x200", id: "img_prev" %>
      <% end %>
    </div>
    <%= f.file_field :image, id: "input_img" %>
  </div>

  <div class="form-group right ma-t-20">
    <%= f.submit "編集", class: "btn-primary btn-lg" %>
  </div>

<% end %>
