<div class="container">
  <div class="row ma-t-50">
    <div class="col-lg-8 offset-lg-2">
      <div id="title" class="title ma-t-50">
        <h1 class="font-50">New Review</h1>
      </div>
      <div class="schedule-form ma-t-30 box">
        <%= form_for @review, url: post_reviews_path(params[:post_id]) do |f| %>
          <div class="form-group" id="star">
            <%= f.label :rating, "レビュー" %>
            <%= f.hidden_field :rating, id: :review_star %>
          </div>

          <div class="form-group">
            <%= f.label :content, "レビュー内容" %>
            <%= f.text_area :content, class: "form-control" %>
            <div class="invalid-feedback">
              投稿内容を確認してください
            </div>
          </div>

          <div class="form-group right ma-t-20">
            <%= f.submit "レビューする", class: "btn-primary btn-lg" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $("#star").raty({
    size: 36,
    starOff: "<%= asset_path("star-off.png") %>",
    starOn: "<%= asset_path("star-on.png") %>",
    starHalf: "<%= asset_path("star-half.png") %>",
    scoreName: "review[rating]",
    half: true,
  });
</script>