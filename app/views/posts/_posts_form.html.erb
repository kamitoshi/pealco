<%= form_for @post do |f| %>

    <div class="form-group">
      <div class="profile_image_box pa-20">
        <%= post_show_image(@post) %>
      </div>
      <%= f.file_field :image %>
    </div>

    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :menu_name, "メニュー名" %>
      <%= f.text_field :menu_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :alc_category, "お酒ジャンル" %><br>
      <%= f.collection_select :alc_category_id, AlcCategory.all, :id, :name %>
    </div>

    <div class="form-group">
      <%= f.label :menu_category, "投稿ジャンル" %><br>
      <%= f.collection_select :menu_category_id, MenuCategory.all, :id, :name %>
    </div>

    <div class="form-group">
      <%= f.label :content, "投稿内容" %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group right ma-t-20">
      <%= f.submit btn_title, class: "btn-primary btn-lg" %>
    </div>

  <% end %>