<div class="collapse" id="collapseExample">
  <% comments.offset(2).each do |comment| %>
    <% unless comment.nil? %>
      <div class="comment-box ma-l-30 ma-y-10">
        <div class="comment-box-content" id="comment">
          <%= comment.content %>
        </div>
        <div class="comment-box-info right">
          <span><%= link_to "@#{comment.user.name}", user_path(comment.user) %></span>     
          <span class="comment-date pull-right">
            <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </span>
          <span>
            <% if comment.user == current_user %>
              <%= link_to post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                <i class="fas fa-trash" style="color: gray;"></i>
              <% end %>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<p>
  <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">もっと見る、、、</a>
</p>
