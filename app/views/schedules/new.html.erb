<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="title ma-t-50">
        <h1 class="font-30">スケジュール登録</h1>
      </div>

      <div class="schedule-form ma-t-30 box">
        <%= form_for @schedule do |f| %>

          <div class="form-group">
            <p class="font-20">日時　<%= params[:date].split("-").join("/") %></p>
            <%= f.hidden_field :start_date, value: params[:date] %>
          </div>

          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :content, "内容" %>
            <%= f.text_area :content, class: "form-control" %>
          </div>

          <div class="form-group right ma-t-20">
            <%= f.submit "登録", class: "btn-primary btn-lg" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
