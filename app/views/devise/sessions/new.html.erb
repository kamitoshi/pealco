<div class="container-fluid back-sign">
  <div class="row">
    <div class="col-lg-4 sign-in-form">
      <div class="title pa-30 center">
        <h1>L o g i n</h1>
      </div>
      <div class="form-box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "shared/form_error_message", resource: resource %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <div class="actions form-group right ma-t-50">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
