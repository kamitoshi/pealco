<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top opa-9">
  <div class="container">
    <a href="/"><%= image_tag "pealco_logo.png", size:"200x100" %></a>
    <nav class="navbar navbar-dark bg-dark">
      <% if user_signed_in? %>
        <ul class="nav font-20">
          <li class="nav-item"><%= user_sumnail_image(current_user) %></li>
          <li class="nav-item"><%= link_to current_user.name, user_path(current_user), class: "nav-link" %></li>
          <li class="nav-item ma-x-20">
            <a href="/users" data-toggle="tooltip" title="ユーザー一覧" style="color:white">
              <i class="fas fa-users font-30"></i>
            </a>
          </li>
          <li class="nav-item ma-x-20">
            <a href="/posts" data-toggle="tooltip" title="投稿一覧" style="color:white">
              <i class="fas fa-book font-30"></i>
            </a>
          </li>
          <li class="nav-item ma-x-20">
            <a href="/users/sign_out" data-toggle="tooltip" data-method="delete" title="ログアウト" style="color:white">
              <i class="fas fa-sign-out-alt font-30"></i>
            </a>
          </li>
        </ul>
      <% else %>
        <ul class="nav">
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
        </ul>
      <% end %>
    </nav>
  </div>
</header>