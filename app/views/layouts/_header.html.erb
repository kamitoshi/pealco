<header class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top opa-9">
  <div class="container">
    <nav class="navbar navbar-dark bg-dark">
      <a class="navbar-brand" href="#">PeAlco</a>
    </nav>
    <% if user_signed_in? %>
      <ul class="nav">
        <li class="nav-item"><%= link_to current_user.name, user_path(current_user), class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>
        <li class="nav-item dropdown show">
          <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
            投稿<b class="caret"></b>
          </a>
          <div class="dropdown-menu">
            <a><%= link_to "投稿一覧", posts_path, class: "dropdown-item" %></a>
            <a><%= link_to "新規投稿", new_post_path, class: "dropdown-item" %></a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
            マイアカウント<b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "プロフィール", current_user, class: "dropdown-item" %></li>
            <li><%= link_to "プロフィール編集", edit_user_path(current_user), class: "dropdown-item" %></li>
            <li class="dropdown-divider"></li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </li>
          </ul>
        </li>
      </ul>
    <% else %>
      <ul class="nav">
        <li class="nav-item"><%= link_to "新規投稿", new_user_registration_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
      </ul>
    <% end %>
  </div>
</header>